<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ru.astralight.koksharov.organizer.ui.TaskDistribution" android:orientation="vertical"
        android:id="@+id/linearLayout">

    <Button
            android:text="@string/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/task_distribution_left"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>


    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/task_distibution_combo"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/task_distribution_left"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/task_disribution_date"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintTop_toBottomOf="@+id/task_distibution_combo" android:layout_marginTop="5dp"/>


    <com.savvi.rangedatepicker.CalendarPickerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/task_distribution_calendar_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="300dp"/>

</android.support.constraint.ConstraintLayout>
